<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- 1. 사용할(XXXMapper.xml) 패키지명 포함 vo 클래스를 alias 선언 -->
	<typeAliases>
		<typeAlias alias="member" type="springGain.vo.Member"/>
		<typeAlias alias="product" type="springGain.vo.Product"/>
		<typeAlias alias="qna" type="springGain.vo.QnA"/>
		<typeAlias alias="raffle" type="springGain.vo.Raffle"/>
		
	</typeAliases>
	<!-- 2. 사용 XXXMapper.xml을 추가 -->
	<mappers>
		<mapper resource="resource/MemberMapper.xml"/>
		<mapper resource="resource/heejun/ProdMapper.xml"/>
		<mapper resource="resource/sumin/qnaMapper.xml"/>
	</mappers>
</configuration>